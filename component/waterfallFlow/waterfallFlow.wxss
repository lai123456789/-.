@import "/common/main.wxss";
.page_index {
  padding: 0 30rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  overflow: hidden;
}

.page_left {
  width: 335rpx;
}

.page_right {
  width: 335rpx;
}

.page_image {
  width: 100%;
}

.page_title {
  width: 100%;
  border-radius: 0 0 10rpx 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.waterfall_box {
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0px 0px 15px 1px rgba(183, 183, 183, 0.25);
}
