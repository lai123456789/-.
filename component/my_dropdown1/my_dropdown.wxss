@import "/common/main.wxss";

.my_dropdown {
  position: relative;
  display: -webkit-flex;
  display: flex;
  -webkit-user-select: none;
  user-select: none;
  height: 40px;
  background-color: #f8f8f8;
  background-color: var(--dropdown-menu-background-color, #f8f8f8);
  z-index: 999;
}

.my_dropdown_item {
  display: -webkit-flex;
  display: flex;
  -webkit-flex: 1;
  flex: 1;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
  min-width: 0;
}

.my_dropdown_item_title.active {
  color: #fe2544;
}

.my_dropdown_item_title.active::after {
  margin-top: -5px;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
}

.my_dropdown_item_title {
  position: relative;
  box-sizing: border-box;
  max-width: 100%;
  padding: 0 8px;
  padding: var(--dropdown-menu-title-padding, 0 8px);
  color: #666;
  font-size: 28rpx;
}

.my_dropdown_item_title:after {
  position: absolute;
  top: 50%;
  right: -4px;
  margin-top: -1px;
  border-color: transparent transparent currentcolor currentcolor;
  border-style: solid;
  border-width: 3px;
  -webkit-transform: rotate(135deg);
  transform: rotate(135deg);
  opacity: 0.8;
  content: "";
  border-top-color: transparent;
  border-right-color: transparent;
  border-bottom-color: currentcolor;
  border-left-color: currentcolor;
  border-top-style: solid;
  border-right-style: solid;
  border-bottom-style: solid;
  border-left-style: solid;
  border-top-width: 3px;
  border-right-width: 3px;
  border-bottom-width: 3px;
  border-left-width: 3px;
}

.menu_item {
  width: 370rpx;
  height: 88rpx;
  padding: 20rpx 60rpx;
  background-color: #f4f4f4;
  color: #333333;
}

.menu_item.active {
  color: #fe2544;
  background-color: #fff;
}

.area_group {
  width: 370rpx;
  height: 88rpx;
  padding: 20rpx 60rpx;
  background-color: #fff;
}

.price_tag.active {
  color: #fe2544;
  background: #ffeeef;
}

.price_tag {
  width: 144rpx;
  height: 50rpx;
  background: #f5f5f5;
  border-radius: 31rpx;
  margin: 20rpx 20rpx 50rpx 0;
  text-align: center;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #333333;
}

.my_dropdown_cell {
  position: relative;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  width: 100%;
  padding: 21rpx 60rpx;
  font-size: 32rpx;
  font-weight: 400;
  background-color: #fff;
  color: #333333;
}

