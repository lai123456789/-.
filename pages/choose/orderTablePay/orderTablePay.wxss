
.food-cart-cell-bg-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}

.food-cart-cell-line {
  background-color: rgb(226, 226, 226);
  height: 1rpx;
}

.food-cart-cell-image {
  height: 130rpx;
  width: 130rpx;
  border-radius: 10rpx;
}

.food-cart-cell-info-bg {
  /* margin-left: 20rpx; */
  width: 520rpx;
  /* width: 543rpx; */
  height: 140rpx;
  display: flex;
  flex-direction: column;
}

.food-cart-name-taste-bg {
  margin-top: 11rpx;
  height: 26rpx;
  display: flex;
  flex-direction: row;
}

.food-cart-name {
  font-size: 30rpx;
  font-family: PingFang SC;
  line-height: 26rpx;
}

.food-cart-fla {
  margin-left: 55rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  color: rgba(153, 153, 153, 1);
  line-height: 26rpx;
}

.food-cart-price-bg {
  /* margin-top: 33rpx; */
  /* height: 48rpx; */
  display: flex;
  flex-direction: row;
}

.food-cart-num-bg {
  width: 135rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.food-cart-original-price {
  font-size: 22rpx;
}

.food-cart-preferential-price {
  font-size: 30rpx;
  font-family: PingFang SC;
  color: rgba(218, 0, 0, 1);
  font-weight: bold;
}
.food-cart-preferential-price .hprice-image {
  height: 22rpx;
  width: 26rpx;
  margin-right: 4rpx;
}

.food-cart-get-way {
  padding: 3rpx 0rpx;
  width: 100rpx;
  border: 1rpx solid rgba(252, 106, 50, 1);
  font-size: 20rpx;
  font-weight: bold;
  font-family: PingFang SC;
  margin-left: 24rpx;
  text-align: center;
  border-radius: 20rpx;
}

.food-cary-reduce-imae {
  width: 19rpx;
  height: 33rpx;
}

.food-cary-num {
  margin-left: 5rpx;
  width: 59rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
  line-height: 33rpx;
  text-align: center;
}

.food-cary-increase-imae {
  width: 19rpx;
  height: 33rpx;
  margin-left: 5rpx;
}

.food-cary-reduce {
  margin-left: 5rpx;
  width: 59rpx;
  font-size: 40rpx;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
  line-height: 33rpx;
  text-align: center;
}

.footer-btn {
  background-color: rgba(239, 239, 239, 1.0);
  position: fixed;
  bottom: 0rpx;
  height: 120rpx;
  width: 100%;
  z-index: 1002;
  font-size: 28rpx;
}

/* 底部菜单 */
